#!/bin/bash
# Script to summarize Pokémon data and generate a CSV report

DATA_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Check if data directory exists
if [ ! -d "$DATA_DIR" ]; then
    echo "Error: Directory '$DATA_DIR' not found. Run Task 2 first."
    exit 1
fi

# Start CSV file with header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files
for file in "$DATA_DIR"/*.json; do
    # Extract fields
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert height and weight
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    # Use sed to capitalize first letter of Pokémon name
    name=$(echo "$name" | sed 's/.*/\u&/')

    # Append formatted line to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Print CSV
cat "$OUTPUT_FILE"
echo ""

# Use awk to calculate averages
awk -F, 'NR>1 {h+=$2; w+=$3; c++} 
END {
    printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/c, w/c
}' "$OUTPUT_FILE"
